<!DOCTYPE html>
<html>
  <head>
    <title>Golden Book Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="bg-stone-700">
      <aside data-controller="locale" style="position:absolute; top:10px; right:10px;">
        <%= form_tag store_index_path, class: 'locale' do %>
          <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
          <%= submit_tag 'submit', data: {'locale-target' => 'submit'} %>
        <% end %>
      </aside>
      <ul class="text-gray-300">
      <a style="position:absolute; left:180px;" href="/"><%= t('.home') %></a>
      </ul>
      <%= image_tag 'logo.svg', alt: 'Golden book store' %>
      <% if session[:user_id] %>
          <ul style="position:absolute; top:0px; left:240px;" class="text-gray-300">
            <li><%= link_to 'Pasūtijumi',   orders_path   %></li>
            <li><%= link_to 'Grāmatas', products_path %></li>
            <li><%= link_to 'Admini',    users_path    %></li>
            <li><%= button_to 'Iziet', logout_path, method: :delete %></li>
          </ul>
        <% end %>
      <h1><%= @page_title %></h1>
    </header>

    <section class="flex">
        <%= render partial: 'layouts/cart', locals: {cart: @cart } %>
          
        </ul>

      <main class="container mx-auto mt-4 px-5 flex">
        <%= yield %>
      </main>
    </section>
  </body>
</html>
