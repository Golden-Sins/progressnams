<div id="<%= dom_id cart %>">
<h2 class="font-bold text-lg mb-3">Your Cart</h2>
<table class="table-auto">
<%= render cart.line_items %>
<tr>
<td class="text-right"><%= line_item.quantity %></td> <td>&times;</td>
<td class="pr-2">
<%= line_item.product.title %> </td>
<td class="text-right font-bold">
<%= number_to_currency(line_item.total_price) %>
</td> 
</tr>
<% end %>
<% if cart and not cart.line_items.empty? %> <div id="cart" class="bg-white rounded p-2">
<%= render cart %> </div>
<% else %>
<div id="cart"></div>
<% end %>
<tfoot> 
<tr>
<td class="text-right pt-2 font-bold border-t-2 border-black"> <%= number_to_currency(cart.total_price) %>
</td> 
</tr>
    </tfoot>
  </table>
<th class="text-right pr-2 pt-2" colspan="3">Total:</th>
<%= button_to 'Empty Cart', cart, method: :delete,
class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
